<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.didichuxing.datachannel.arius.admin.persistence.mysql.arius.AriusUserLoginRecordDAO">

    <resultMap id="AriusUserLoginRecordMap" type="com.didichuxing.datachannel.arius.admin.common.bean.po.arius.UserLoginRecordPO">
        <result property="loginName" column="login_name"/>
        <result property="loginTime" column="login_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, login_name, login_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and '' != id">
                AND id = #{id}
            </if>
           <if test="loginName != null and '' != loginName">
                AND login_name = #{loginName}
            </if>
           <if test="loginTimeBegin != null">
                AND login_time >= #{loginTimeBegin}
           </if>
           <if test="loginTimeEnd != null">
                AND login_time &lt;= #{loginTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="AriusUserLoginRecordMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                arius_user_login_record
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="find" resultMap="AriusUserLoginRecordMap">
        SELECT
        <include refid="columns" />
        FROM
        arius_user_login_record
    </select>
    
    <select id="query" resultMap="AriusUserLoginRecordMap">

        SELECT
            <include refid="columns" />
        FROM
            arius_user_login_record 
        <include refid="where"/>

    </select>
        
    <select id="getCount" resultType="int">
        <![CDATA[
            SELECT
                count(1)
            FROM
                arius_user_login_record
        ]]>
        <include refid="where"/>
    </select>

    <select id="getCountByNameAndTimeAndTimeEnd" resultType="int">
        <![CDATA[
            SELECT
                count(1)
            FROM
                arius_user_login_record
        ]]>
        <where>
            login_name = #{loginName}
            <if test="loginTimeBegin != null">
                AND login_time >= #{loginTimeBegin}
            </if>
            <if test="loginTimeEnd != null">
                AND login_time &lt;= #{loginTimeEnd}
            </if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO arius_user_login_record (
                login_name,
                login_time
            ) VALUES (
                #{loginName},
                #{loginTime}
            )
        ]]>
    </insert>

</mapper>

