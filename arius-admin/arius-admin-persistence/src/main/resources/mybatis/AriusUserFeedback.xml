<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.didichuxing.datachannel.arius.admin.persistence.mysql.feedback.AriusUserFeedbackDAO">


    <resultMap id="AriusUserFeedbackMap" type="com.didichuxing.datachannel.arius.admin.common.bean.po.feedback.AriusUserFeedbackPO">
        <result property="feedback" column="feedback"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, feedback, creator, create_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and '' != id">
                AND id = #{id}
            </if>
           <if test="feedback != null and '' != feedback">
                AND feedback = #{feedback}
            </if>
           <if test="creator != null and '' != creator">
                AND creator = #{creator}
            </if>
           <if test="createTimeBegin != null">
                AND create_time >= #{createTimeBegin}
           </if>
           <if test="createTimeEnd != null">
                AND create_time &lt;= #{createTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="AriusUserFeedbackMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                arius_user_feedback
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="find" resultMap="AriusUserFeedbackMap">
        SELECT
        <include refid="columns" />
        FROM
        arius_user_feedback
    </select>
    
    <select id="query" resultMap="AriusUserFeedbackMap">
        SELECT
            <include refid="columns" />
        FROM
            arius_user_feedback 
        <include refid="where"/>
    </select>
        
    <select id="getCount" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                arius_user_feedback
        ]]>
        <include refid="where"/>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO arius_user_feedback (
                feedback,
                creator,
                create_time
            ) VALUES (
                #{feedback},
                #{creator},
                #{createTime}
            )
        ]]>
    </insert>
    
    <update id="update">
        	UPDATE
                arius_user_feedback
            <set>
                <![CDATA[ feedback = #{feedback} ]]>,
                <![CDATA[ creator = #{creator} ]]>,
                <![CDATA[ create_time = #{createTime} ]]>
            </set>
            <where> 
                id = #{id}
            </where>
    </update>
    
    <update id="updatePart">
            UPDATE
                arius_user_feedback
            <set>
                <if test="@Ognl@isNotEmpty(feedback)">
                	<![CDATA[ feedback = #{feedback} ]]>,
                </if>
                <if test="@Ognl@isNotEmpty(creator)">
                	<![CDATA[ creator = #{creator} ]]>,
                </if>
                <if test="@Ognl@isNotEmpty(createTime)">
                	<![CDATA[ create_time = #{createTime} ]]>
                </if>
            </set>
            <where>
                id = #{id}
            </where>
    </update>
    

</mapper>

