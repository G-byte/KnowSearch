<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.didichuxing.datachannel.arius.admin.persistence.mysql.notify.NotifyHistoryDAO">
    <resultMap id="BaseResultMap"
               type="com.didichuxing.datachannel.arius.admin.common.bean.po.notify.NotifyHistoryPO">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="task_type" jdbcType="VARCHAR" property="taskType"/>
        <result column="biz_id" jdbcType="VARCHAR" property="bizId"/>
        <result column="receiver" jdbcType="VARCHAR" property="receiver"/>
        <result column="channel" jdbcType="VARCHAR" property="channel"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
       id, task_type, biz_id, receiver, channel, create_time, update_time
    </sql>

    <insert id="insert"
            parameterType="com.didichuxing.datachannel.arius.admin.common.bean.po.notify.NotifyHistoryPO"
            useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        insert into notify_history
        (task_type, biz_id, receiver, channel)
        values
        (#{taskType}, #{bizId}, #{receiver}, #{channel})
    </insert>

    <select id="getByKeyAndTime" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>
        from notify_history
        <trim prefix="where" prefixOverrides="and">
            <if test="bizId != null">and biz_id = #{bizId}</if>
            <if test="taskType != null">and task_type = #{taskType}</if>
            <if test="receiver != null">and receiver = #{receiver}</if>
            <if test="channel != null">and channel = #{channel}</if>
            <if test="startTime != null">and create_time >= #{startTime}</if>
            <if test="endTime != null">and create_time &lt;= #{endTime}</if>
        </trim>
        order by id desc
    </select>

</mapper>